package javapractice;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {

		Scanner sc=new Scanner(System.in);
		final int len=sc.nextInt();
		int []ar=new int[len];
		int []br=new int[len];
		for(int i=0;i<len;i++) {
			ar[i]=sc.nextInt();
			br[i]=0;
		}

		int i=3;
		while(i<len) {
			switch(i) {
			case 0:
				if(ar[i]>ar[i+1]&&ar[i]>ar[i+2]) {
					br[i]=1;
				}
				break;
			case 1:
				if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i+2]) {
					br[i]=1;
				}
				break;
				default:break;
			}
			
			if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+2]) {
				br[i]=1;
			}
		i++;}
		for(int i=0;i<len;i++) {
			System.out.println(br[i]);
		}
		
	}

}
