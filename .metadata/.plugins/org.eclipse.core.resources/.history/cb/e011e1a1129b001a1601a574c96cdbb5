	static String Spectrum(String []s,int l) {
		int f=firstString(s,l);System.out.println(f);
		
		String t="";
		String t1="";
		int k=0;
		String[]tmp=new String[100];
		for(int i=0;i<l;i++) {
			k=0;
			for(int j=0;j<l;j++) {
				if(i==j)continue;
				
				t=s[i].substring(1);
				t1=s[j].substring(0,l-1);
				if(t.equals(t1)) {
					tmp[k]=t+t1.charAt(l-1);
				}
			}
			
		}
		
		return "";
	}
	static int firstString(String []s,int l) {
		String t="";
		String t1="";
		int k;
		test:for(int i=0;i<l;i++) {
			k=i;
			t=s[i].substring(0,l-1);
			for(int j=0;j<l;j++) {
				if(i==j)continue;
				
				t1=s[j].substring(1);
				if(t.equals(t1)) {
					continue test;
				}
			}
			return k;
		}
		return -1;
		
	}

}
