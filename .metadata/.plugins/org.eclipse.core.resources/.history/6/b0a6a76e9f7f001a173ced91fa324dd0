package week5;

public class no2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int M=11;
		int Mar[]=new int[M];
		int c1=1,c2=4,c3=7;
		coinDynamic(Mar,M,c1,c2,c3);

	}
	static void coinDynamic(int Mar[],int M,int c1,int c2,int c3) {
		int t1=0,t2=0,t3=0;
		for(int i=0;i<M;i++) {
			if(i-c3>=0) {
			t1=Mar[i-c1]+1;
			t2=Mar[i-c2]+1;
			t3=Mar[i-c3]+1;
			}else if(i-c2>=0) {
				t1=Mar[i-c1]+1;
				t2=Mar[i-c2]+1;
				t3=10;
			}else if(i-c1>=0){
				t1=Mar[i-c1]+1;
				t2=10;
				t3=10;
			}
			Mar[i]=min(t1,t2,t3);
			
			
			System.out.print(Mar[i]+" ");
			
		}
	}
	static int min(int a,int b,int c) {
		// 세 수를 단순 비교하여 max값을 리턴합니다.
		int min=a;
		if(min>b)
			min=b;
		
		if(min>c)
			min=c;
		return c;
		
	}

}
