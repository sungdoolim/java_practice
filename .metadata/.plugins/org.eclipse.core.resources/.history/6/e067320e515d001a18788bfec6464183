package javapractice;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {

		Scanner sc=new Scanner(System.in);
		int len=sc.nextInt();
		int []ar=new int[len];
		int []br=new int[len];
		for(int i=0;i<len;i++) {
			ar[i]=sc.nextInt();
			br[i]=0;
		}

		int i=3;
		while(true) {
			if(i<3||i>len-3) {
				
			}
			if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+2]) {
				br[i]=1;
			}
		}
		
	}

}
