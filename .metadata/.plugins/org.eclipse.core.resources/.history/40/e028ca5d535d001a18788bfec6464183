package javapractice;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {

		Scanner sc=new Scanner(System.in);
		final int len=sc.nextInt();
		int []ar=new int[len];
		int []br=new int[len];
		for(int i=0;i<len;i++) {
			ar[i]=sc.nextInt();
			br[i]=0;
		}

		for(int i=0;i<len;i++) {
			switch(i) {
			case 0:
				if(ar[i]>ar[i+1]&&ar[i]>ar[i+2]) {
					br[i]=1;
				}
				continue;
			case 1:
				if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i+2]) {
					br[i]=1;
				}

				continue;
				default:
					if(i==len-1) {
						if(ar[i]>ar[i-1]&&ar[i]>ar[i-2]) {
							br[i]=1;
						}
						continue;
					}else if(i==len-2) {
						if(ar[i]>ar[i-1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+1]) {
							br[i]=1;
						}
						continue;
					}
					if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+2]) {
						br[i]=1;
					}break;
					
			}
			
		
		}
		for(int j=0;j<len;j++) {
			System.out.println(br[j]);
		}
		
	}

}
