package week2;

import java.util.Stack;

public class no3_3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int ran=0;
		int []N=new int[10];
		for(int i=0;i<10;i++) {
			ran=(int)(Math.random()*10000)+1;
			N[i]=ran;
			System.out.println(N[i]);
		}
		quick(N,N.length);
		System.out.println("dd");
		for(int i=0;i<10;i++) {
			System.out.println(N[i]);
		}
	
	}
	static void quick(int[]N,int len) {
		Stack<Integer> stack = new Stack<>();
		
	
		int start=0;
		int end=len-1;
		stack.push(end);
		stack.push(start);
		
		int left=0;
		int right=0;
		int pivot_index=0;
		int tmp=0;
		
		while(!stack.isEmpty()) {
			System.out.println(1);
			start=stack.pop();
			left=start+1;
			end=stack.pop();
			
			while(N[start]>N[left]) {
				left++;
				if(left>end) {
					left=start;
					break;
				}
			}
			while(N[start]<N[right]) {
				right--;
				if(right<start) {
					right=start;
					break;
				}
			}
			if(left<right) {
				tmp=N[left];
				N[left]=N[right];
				N[right]=tmp;
			}else if(left==right) {
			break;	
			}
			else {
				tmp=N[start];
				N[start]=N[right];
				N[right]=tmp;
				stack.push(end);
				stack.push(right+1);
				stack.push(right-1);
				stack.push(start);
			}
			
			
		}
	}

}
