package week3;

import java.util.Stack;

public class no1_2 {

	public static void main(String[] args) {

		int  []A= {30, 20, 40, 35, 5, 50, 45, 10, 25, 15};
		int []B=new int[10];// 0으로 초기화가 됨
		int len=A.length;
		for(int i=0;i<len;i++) {System.out.print(A[i]+" ");}
		
		System.out.println();
		mergeSort(A);
		for(int i=0;i<len;i++) {System.out.print(A[i]+" ");}

	}
	
	static void mergeSort(int[]A) {
	int len=A.length;
	int k=0;
	int tmp;int t1, t2,t;
	int index=0;
	int[]B=new int[len];
	for(int i=0;i<len;i+=2) {
		if (i==len)break;
		if(A[i]>A[i+1]) {
			tmp=A[i];
			A[i]=A[i+1];
			A[i+1]=tmp;
		}
	}// 배열의 원소 두개씩만 묶어서 정렬한 것 입니다.
	
	while(true) {
		for(int i=0;i<len;i++) {System.out.print(A[i]+" ");}
		System.out.println();
	
		k++;
			 t=0;
			 int m=(int) (Math.pow(2, k));
			t1=t+ m;
			t2=t1+m;
		
			while(true) {
		if(t1>=t2||t>=t1)
			break;
		if(A[t]>A[t1]) {
			B[index]=A[t1];
			index++;t1++;
		}else if(A[t]<=A[t1]) {
			B[index]=A[t];
			index++;t++;
		}
		}
		if(t<t1) {
			for(;t<t1;t++) {
				B[index]=A[t];
				index++;
			}
		}else if(t1<t2) {
			B[index]=A[t1];
			index++;
		}
		
		
		
	}
	
	}
}
