package week3;

public class no2makeheap {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		int []A= {4,1,3,2,16,9,10,14,8,7};
		int len=A.length;
		makeheap(A,0,len-1);
		
		for(int i=0;i<len;i++) {
			System.out.print(A[i]+" ");
		}
		
		
		
	}
	public static void makeheap(int[]A,int root,int last) {
		
		int index=(last-1)/2;
		int t1,t2,tmp;
		int max;
		for(int i=index;i>=root;i--) {
			makeheap2(A,i);

		}
		
		
		
		
		
	}
	public static void makeheap2(int[]A,int root) {
		int t1=2*root+1;
		int t2=2*root+2;
		int len=A.length;
		int tmp;
		if(t1>=len) {
			return;
		}else if(t2>=len&&A[t1]>A[root]) {
			tmp=A[root];
			A[root]=A[t1];
			A[t1]=tmp;
			return;
		}else {
			
			if(A[t1]>A[t2]&&A[root]<A[t1]){
				tmp=A[t1];
				A[t1]=A[root];
				A[root]=tmp;
				makeheap2(A,t1);
			}
			else if(A[t1]<=A[t2]&&A[root]<A[t2]){
				tmp=A[t2];
				A[t2]=A[root];
				A[root]=tmp;
				makeheap2(A,t2);
			}
		}
	}

}
