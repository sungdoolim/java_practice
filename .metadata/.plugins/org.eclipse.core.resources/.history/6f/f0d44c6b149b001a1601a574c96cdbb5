	static String Spectrum(String []s,int l) {
		int len=s.length;
		int f=firstString(s,l,len);System.out.println(f);
		
		String t=s[f];
		next(s,l,len,t);
		
		
		

		
		return "";
	}
	static void next(String []s,int l,int len,String t) {
		System.out.println(t);
		String t1="";
		int tl=t.length();
		int k=0;
		String[]tmp=new String[100];
		String tt="";
		
			for(int j=0;j<len;j++) {
				tt=t.substring(tl-l+1);
				System.out.println(tt);
				t1=s[j].substring(0,l-1);
				if(t.equals(t1)) {
					tmp[k]=t+t1.charAt(l-1);
					k++;
				}
			}
			for(int i=0;i<k;i++)
			System.out.println(tmp[i]);
		
	}
	static int firstString(String []s,int l,int len) {
		String t="";
		String t1="";
		int k;
		test:for(int i=0;i<len;i++) {
			k=i;
			t=s[i].substring(0,l-1);
			for(int j=0;j<len;j++) {
			//	System.out.println(i+","+j);
				
				if(i==j)continue;
				
				t1=s[j].substring(1);
			//	System.out.println(t+","+t1);
				if(t.equals(t1)) {
					continue test;
				}
			}
			return k;
		}
		return -1;
		
	}

}
