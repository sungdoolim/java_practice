package javapractice;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {

		Scanner sc=new Scanner(System.in);
		final int len=sc.nextInt();
		int []ar=new int[len];
		int []br=new int[len];
		for(int i=0;i<len;i++) {
			ar[i]=sc.nextInt();
			br[i]=0;
		}

		for(int i=0;i<len;i++) {
			switch(i) {
			case 0:
				if(ar[i]>ar[i+1]&&ar[i]>ar[i+2]) {
					if(ar[i+1]>ar[i+2]) {
						br[i]=ar[i]-ar[i+1];
					}else {
						br[i]=-ar[i]+ar[i+1];
					}
					
				}
				break;
			case 1:
				if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i+2]) {
					int min=ar[i-1];
					if(min>ar[i+2])
						min=ar[i+2];
					if(min>ar[i+1])
						min=ar[i+1];
					br[i]=min;
				}

				break;
				default:
					if(i==len-1) {
						if(ar[i]>ar[i-1]&&ar[i]>ar[i-2]) {
							int min=ar[i-1];
							if(min>ar[i-2])
								min=ar[i-2];
							br[i]=min;
							
						}
						break;
					}else if(i==len-2) {
						if(ar[i]>ar[i-1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+1]) {
							int min=ar[i-1];
							if(min>ar[i-2])
								min=ar[i-2];
						
							if(min>ar[i+1])
								min=ar[i+1];
							br[i]=min;
							
						}
						break;
					}else {
					if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+2]) {
						
					int min=ar[i-1];
					if(min>ar[i-2])
						min=ar[i-2];
					if(min>ar[i+2])
						min=ar[i+2];
					if(min>ar[i+1])
						min=ar[i+1];
					
					
						br[i]=min;
					
					
					
					}break;}
					
			}
			
		
		}
		int sum=0;
		for(int j=0;j<len;j++) {
			sum+=br[j];
			System.out.print(br[j]+" ");
		}System.out.println(sum);
		
	}

}
