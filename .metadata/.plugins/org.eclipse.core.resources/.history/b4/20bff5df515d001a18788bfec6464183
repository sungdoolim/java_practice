package javapractice;

import java.util.Scanner;

public class test1 {

	public static void main(String[] args) {

		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		final int len=7;
		int []ar=new int[len];
		int []br=new int[len];
		for(int i=0;i<len;i++) {
			ar[i]=sc.nextInt();
			br[i]=0;
		}

		int i=3;
		while(true) {
			switch(i) {
			case 0:
				break;
			case 1:
				break;
			case len-2:
				break;
			case len-1:
				break;
				
			}
			
			if(ar[i]>ar[i-1]&&ar[i]>ar[i+1]&&ar[i]>ar[i-2]&&ar[i]>ar[i+2]) {
				br[i]=1;
			}
		}
		
	}

}
